<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

        <variable
            name="you"
            type="com.song.redcord.bean.You" />
    </data>

    <android.support.v7.widget.CardView
        android:id="@+id/close_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="8dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="13.3dp"
            android:paddingEnd="13.3dp"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/close_name"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:gravity="center"
                android:background="@drawable/avatar_bg"
                android:shadowRadius="1"
                android:shadowDx="10"
                android:shadowDy="10"
                android:text="@{you.name}"
                android:singleLine="true"
                android:ellipsize="end"
                android:textColor="@color/colorWhite"
                android:textSize="16sp"
                android:textStyle="italic|bold"/>

            <TextView
                android:id="@+id/close_address"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:text="@{you.address}"
                android:textColor="@android:color/black"
                android:textSize="14sp"
                android:layout_weight="1"
                />

            <TextView
                android:id="@+id/close_see_you"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="20dp"
                android:paddingEnd="20dp"
                android:paddingTop="5dp"
                android:paddingBottom="5dp"
                android:background="@drawable/btn_bg"
                android:text="@string/app_see_you"
                android:textColor="@color/colorWhite"
                android:textSize="14sp"
                android:textStyle="bold"
                />

        </LinearLayout>


    </android.support.v7.widget.CardView>

</layout>